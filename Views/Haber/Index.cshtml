@model List<Haber>
@{
    ViewData["Title"] = "Index";
}
<h2>Haberler</h2>

<table>
    <tr>
        <th>Baslik</th>
        <th>Tarih</th>
        <th></th>
    </tr>
    @foreach (var haber in Model)
    {
        <tr>
            <td>@haber.Baslik</td>
            <td>@haber.Tarih</td>
            <td>
                @Html.ActionLink("Detay", "Detay", new { id = haber.Id })
                @Html.ActionLink("Güncelle", "Guncelle", new { id = haber.Id })
                @Html.ActionLink("Sil", "Sil", new { id = haber.Id })
            </td>
        </tr>
    }
</table>

@Html.ActionLink("Haber Ekle", "Ekle")


